<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="oelp.mahiti.org.newoepl">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".views.activities.TeacherInfoTabActivity"
            android:configChanges="orientation|screenSize"/>

        <activity android:name=".views.activities.AnswerPreviewActivity" />

        <activity
            android:name=".views.activities.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".views.activities.MainActivity" />

        <activity
            android:name=".views.activities.TeacherRegistrationActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".views.activities.OTPVerificationActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".views.activities.MobileLoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".views.activities.UnitsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.activities.HomeActivity"
            android:screenOrientation="portrait" />

        <receiver android:name=".MySMSBroadCastReceiver">
            <intent-filter android:priority="999">
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".views.activities.ChangeMobileNoActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".views.activities.AppIntroActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.activities.SectionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".videoplay.activity.VideoViewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.activities.QuestionAnswerActivity"
            android:screenOrientation="userPortrait" />
        <activity
            android:name=".views.activities.AppIntroVideoActivity"
            android:screenOrientation="userLandscape" />
        <activity android:name=".views.activities.AboutUsActivity" />
        <activity android:name=".views.activities.GroupTabsActivity"
            android:configChanges="orientation|screenSize"/>
    </application>

</manifest>