<RelativeLayout android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:id="@+id/llRecycler"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewMain"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            app:cardCornerRadius="10dp"
            app:cardElevation="12dp">


            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent">


                <com.makeramen.roundedimageview.RoundedImageView
                    android:background="@drawable/image3"
                    android:id="@+id/roundedImageView"
                    android:layout_centerInParent="true"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    app:riv_corner_radius="10dip"
                    app:riv_mutate_background="true" />

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/rlEnableDisable"
                    android:layout_alignParentBottom="true"
                    android:layout_height="50dp"
                    android:layout_width="match_parent"
                    android:scaleType="fitXY"
                    android:src="@color/blackOpaque"
                    app:riv_corner_radius_bottom_left="10dip"
                    app:riv_corner_radius_bottom_right="10dip"
                    app:riv_mutate_background="true" />

                <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:ellipsize="end"
                        android:fontFamily="@font/montserrat_bold"
                        android:id="@+id/tvMediaName"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:maxLines="1"
                        android:text="Media 1"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content">

                        <TextView
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="By: "
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <TextView
                            android:ellipsize="end"
                            android:fontFamily="@font/montserrat_regular"
                            android:id="@+id/tvUploadedBy"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:maxLines="1"
                            android:text="Raj Aryan"
                            android:textColor="@color/white"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/ivPlayButton"
                    android:layout_centerInParent="true"
                    android:layout_height="40dp"
                    android:layout_width="40dp"
                    android:src="@drawable/play_button" />


            </RelativeLayout>


        </android.support.v7.widget.CardView>


    </LinearLayout>


</RelativeLayout>


