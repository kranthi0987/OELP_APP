<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="homeViewModel"
            type="oelp.mahiti.org.newoepl.viewmodel.HomeViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgroundColor"
            android:orientation="vertical"
            tools:mContext=".views.activities.HomeActivity">

            <include
                layout="@layout/white_toolabr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">

                <FrameLayout
                    android:id="@+id/fragmentContainer"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".88" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".12">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="0dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="10dp">
                        <RelativeLayout
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:visibility="@{homeViewModel.teacherLogin?View.VISIBLE:View.GONE}"
                                android:id="@+id/llTeacher"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:weightSum="2">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:visibility="gone">
                                    <!--android:visibility="@{homeViewModel.userType==3?View.VISIBLE:View.GONE}">-->
                                    <!--android:onClick="@{()->homeViewModel.onHomeClick()}"-->



                                    <ImageView
                                        android:id="@+id/ivHomeTeacher"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp" />


                                    <TextView
                                        android:id="@+id/tvHomeTeacher"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/montserrat_medium"
                                        android:text="@string/home"
                                        android:textSize="15sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:onClick="@{()->homeViewModel.onUnitsClick()}"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/ivUnitsTeacher"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp" />

                                    <TextView
                                        android:id="@+id/tvUnitsTeacher"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/montserrat_medium"
                                        android:text="@string/units"
                                        android:textSize="15sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:onClick="@{()->homeViewModel.onGroupsClick()}"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/ivGroupsTeacher"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp" />

                                    <TextView
                                        android:id="@+id/tvGroupsTeacher"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/montserrat_medium"
                                        android:text="@string/groups"
                                        android:textSize="15sp" />
                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:visibility="@{homeViewModel.teacherLogin?View.GONE:View.VISIBLE}"
                                android:id="@+id/llTeacehr"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:weightSum="2">


                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:onClick="@{()->homeViewModel.onUnitsClick()}"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/ivUnitsTrainer"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp" />

                                    <TextView
                                        android:id="@+id/tvUnitsTrainer"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/montserrat_medium"
                                        android:text="@string/units"
                                        android:textSize="15sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:onClick="@{()->homeViewModel.onGroupsClick()}"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/ivGroupsTrainer"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp" />

                                    <TextView
                                        android:id="@+id/tvGroupsTrainer"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/montserrat_medium"
                                        android:text="@string/groups"
                                        android:textSize="15sp" />
                                </LinearLayout>


                            </LinearLayout>

                        </RelativeLayout>



                    </android.support.v7.widget.CardView>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:visibility="visible">

            <!--android:visibility="@{homeViewModel.apiErrorMessage.isEmpty()?View.VISIBLE:View.GONE}">-->

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:visibility="@{homeViewModel.showProgresBar? View.VISIBLE:View.INVISIBLE}" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone">
            <!--android:visibility="@{homeViewModel.apiErrorMessage.isEmpty()?View.GONE:View.VISIBLE}">-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/SOMETHING_WRONG"
                android:textColor="@color/red"
                android:textSize="@dimen/text_large" />
        </RelativeLayout>

    </RelativeLayout>
</layout>