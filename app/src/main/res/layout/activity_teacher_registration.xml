                            <!--<RelativeLayout-->
                                <!--android:id="@+id/rlVillage"-->
                                <!--android:layout_width="wrap_content"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:layout_alignParentRight="true"-->
                                <!--android:enabled="@{!registrationViewModel.showProgresBar}"-->
                                <!--android:paddingLeft="5dp"-->
                                <!--android:paddingRight="10dp"-->
                                <!--android:paddingTop="10dp">-->

                                <!--<android.support.v7.widget.AppCompatSpinner-->
                                    <!--android:id="@+id/spinnerVillage"-->
                                    <!--android:layout_width="30dp"-->
                                    <!--android:layout_height="30dp"-->
                                    <!--android:enabled="@{!registrationViewModel.showProgresBar}"-->
                                    <!--android:popupBackground="@color/white"-->
                                    <!--android:spinnerMode="dropdown"-->
                                    <!--android:visibility="invisible"-->
                                    <!--app:adapter="@{spinnerVillage}" />-->
                                <!--&lt;!&ndash;bind:selectedVillage="@={bindUtils.selectedVillage}"&ndash;&gt;-->

                                <!--<ImageView-->
                                    <!--android:layout_width="15dp"-->
                                    <!--android:layout_height="15dp"-->
                                    <!--android:layout_centerInParent="true"-->
                                    <!--android:src="@drawable/downarrow" />-->
                            <!--</RelativeLayout>-->

                        <!--</RelativeLayout>-->

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/white_bkg_button"
                            android:enabled="@{!registrationViewModel.showProgresBar}"
                            android:onClick="@{()->registrationViewModel.onSubmitClick()}"
                            android:text="Submit"
                            android:textAllCaps="false"
                            android:textColor="@color/black" />
                    </LinearLayout>

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:visibility="@{registrationViewModel.showProgresBar? View.VISIBLE:View.GONE}" />

            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>

</layout>